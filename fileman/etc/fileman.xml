<config>
    <keybinds>
        <!--
         All characters are available, control keys can be used by specifying the name as per the list in /lib/core/full_keyboard.lua or /lib/keyboard.lua.
         Separate multiple character keybinds by a '-'.
         -->
        <bind id="exitPopup">lshift-back</bind>
        <bind id="openInEditor">lcontrol-e</bind>
        <bind id="refresh">lcontrol-r</bind>
        <bind id="forceCrash">lcontrol-lshift-back</bind>
        <bind id="nudgeDown">down</bind>
        <bind id="nudgeUp">up</bind>
        <bind id="fileTab">f</bind>
        <bind id="viewTab">v</bind>
        <bind id="linkTab">l</bind>
        <bind id="selectedTab">s</bind>
    </keybinds>
    <version>2.7.0</version>
    <filetypes>
